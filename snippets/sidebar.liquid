<aside class="grid__item large--one-fifth">
  <h2><a href="/collections">Categories</a></h2>
  <ul>
    {% for link in linklists.collections.links %}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% endfor %}
  </ul>
  <form class="filters" action="/collections/all">
    <h2>Filters</h2>
    <ul>
      <li>
        <span class="filter">Type</span>
        <section>
          <label>
            <a href="/collections/all/havanas">Havanas</a>
          </label>
          <label>
            <input type="checkbox" name="medium">
            Medium
          </label>
          <label>
            <input type="checkbox" name="small">
            Small
          </label>
        </section>
      </li>
      <li class="filter-by-color">
        <span class="filter">Color</span>
        <section>
          <input type="checkbox" name="red">
          <input type="checkbox" name="blue">
        </section>
      </li>
      <li>
        <a class="filter" href="/collections/all/new">Latest Arrivals</a>
      </li>
    </ul>
  </form>
</aside>
<script type="text/javascript">
  Shopify.current_tags = {{ current_tags | json }};
</script>
