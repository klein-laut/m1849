<div class="collection">
  <h2>{{ collection.title }}</h2>
  {% if current_tags != blank %}
    <div class="collection-actionable">
      {% if collection.handle == 'all' %}
        <a href="/collections" class="btn">x Clear Filters</a>
      {% else %}
        <a href="/collections/{{ collection.handle }}" class="btn">x Clear Filters</a>
      {% endif %}
    </div>
    <h4>
      {% for tag in current_tags %}
        {{ tag | capitalize }} 
        {% unless forloop.last %}|{% endunless %}
      {% endfor %}
    </h4>
  {% endif %}

  {% if collection.products == blank %}
    <p>{{ 'collections.general.no_matches' | t }}</p>
  {% else %}
    <section class="collection-products">
      {% for product in collection.products limit: limit %}
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: "small" }}" alt="">
        </a>
      {% endfor %}
    </section>
  {% endif %}
</div>