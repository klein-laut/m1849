<div class="box-layout grid">
  {% for i in (1..1) %}
    {% capture box %}box_{{ i }}_enable{% endcapture %}
    {% capture box_img %}box_{{ i }}.jpg{% endcapture %}
    {% capture box_text_color %}box_{{ i }}_text_color{% endcapture %}
    {% capture box_heading %}box_{{ i }}_heading{% endcapture %}
    {% capture box_subheading %}box_{{ i }}_subheading{% endcapture %}
    {% capture box_cta %}box_{{ i }}_cta{% endcapture %}
    {% capture box_link %}box_{{ i }}_link{% endcapture %}

    {% if settings[box] %}
        <div class="grid__item large--two-thirds medium--one-third">
          <div class="box__box {{ settings[box_text_color] }}" data-color="{{ settings[box_text_color] }}">
            {% if hero_full_height %}
            <a href="{{ settings[box_link] }}">
              <div class="box__image" style="background-image: url('{{ box_img | asset_url }}');" data-image="{{ box_img | asset_url }}"></div>
            </a>
            {% else %}
              <div class="box__image">
                <a href="{{ settings[box_link] }}">
                  <img src="{{ box_img | asset_url }}" alt="{{ settings[box_heading] }}">
                </a>
              </div>
            {% endif %}
            <div class="box__text-wrap">
              <div class="box__text-align">
                <div class="box__text-content">
                  {% unless settings[box_subheading] == blank %}
                    <p class="box__subtitle">
                      {{ settings[box_subheading] }}
                    </p>
                  {% endunless %}
                  {% unless settings[box_heading] == blank %}
                    <h1 class="box__title">
                      {{ settings[box_heading] }}
                    </h1>
                  {% endunless %}
                  {% unless settings[box_cta] == blank %}
                    <a href="{{ settings[box_link] }}" class="btn box__cta">
                      {{ settings[box_cta] }} <span class="icon icon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endunless %}
                </div>
              </div>
            </div>
          </div>
        </div>
    {% endif %}
  {% endfor %}


  {% for i in (2..3) %}
