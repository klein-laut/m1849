.box-aspect-ratio,
.box-aspect-ratio-long {
  @include aspect-ratio(4, 3);
  overflow: hidden;
}
@media screen and (min-width: $large) {
  .box-aspect-ratio-long {
    @include aspect-ratio(4, 6);
    overflow: hidden;
  }
  .box-aspect-ratio-wide {
    @include aspect-ratio(8, 2.975);
    overflow: hidden;
  }
}
.box-layout .box__image {
  line-height: 0;
