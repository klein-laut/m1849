  .switch-image-view {
    display: inline-block;
    background: transparentize($soft-grey, .8);
    color: transparentize($mid-grey, .8);
    padding: 1em 1.6em 1em;
    margin-right: -5px;
    cursor: default;
    font-size: .6em;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
    min-width: 20%;
    border: 1px solid $soft-grey;

    &:before {
      content: '';
    }

    &.active {
      opacity: 1;
      cursor: pointer;
      background: transparent;
      color: $mid-grey;
    }

    @media (max-width: $small) {
      width: 50%;
      line-height: 1;
      padding: 1em 1em 1em !important;
    }
  }

  .front-view-image {
    // display: none;
    z-index: 2;
    position: absolute;
    left: 0;
    height: 100%;
    width: 70%;
    @include transition(opacity 0.35s ease);

    &:not([data-image-count="1"]):not([data-image-count="2"]):hover {
      opacity: 0;

      & ~ .stacked-images {
        opacity: 1;
        height: 100%;

        .product-card {

          $base-left: 70;
          $per-factor: 3.7;

          @for $i from 1 through 10 {
            &[data-image-count="#{$i}"] {
              $factor: $i*$per-factor;
              margin-left: -#{$base-left - $factor}#{"%"};

              @media (max-width: $small) {
                margin-left: -#{($base-left - $factor) * 1.218}#{"%"};
              }
            }
          }

          &:first-child {
            margin-left: 0;
          }
        }
      }
    }

    .front-view-container {
      height: 100%;
    }
  }

  .stacked-images {
    opacity: 0;
    position: absolute;
    width: 70%;
    box-sizing: border-box;
    @include transition(opacity 0.35s ease);

    .product-card {
      display: inline-block;
      position: relative;
      vertical-align: top;
      @include transition(margin-left 0.35s ease);
      border-radius: 13px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      height: auto;

      $base-left: 43;
      $per-factor: 2;

      @for $i from 1 through 10 {
        &[data-image-count="#{$i}"] {
          $factor: $i*$per-factor;
          margin-left: -#{$base-left - $factor}#{"%"};

          @media (max-width: $small) {
            margin-left: -#{($base-left - $factor) * 1.45}#{"%"};
          }
        }
      }

      img {
        height: auto;
        width: 100%;
      }

      &:first-child {
        margin-left: 0;
      }
    }

    @for $i from 1 through 10 {
      .product-card[data-image-count="#{$i}"] {
        $inset: (($i - 1) * $stack_offset) / $i;
        $width: percentage(1/$i);
        width: calc(#{$width} + #{$inset - 4}px);

        $offset_per_stack: 345 / ($i - 1);

        @for $j from 1 through 10 {
          &:nth-child(#{$j}) {
            $stack_offset_y: $offset_per_stack*($j - 1);
            margin-top: #{$stack_offset_y}px;
          }
        }


      }
    }
  }

  .side-view-images {
    position: absolute;
    right: 0;
    height: 100%;
    font-size: 0;
    width: 30%;

    &:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 1;
    }

    .side-view-container {
      display: inline-block;
      overflow: hidden;
      height: 100%;
      border-radius: 10px;
      -webkit-mask-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC);
      mask-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC);
      background: transparent;
    }

    figure {
      display: inline-block;
      overflow: hidden;
      height: 100%;
      width: 20px;
      margin: 0;
      padding: 0;
      position: relative;

      @media (max-width: $small) {
        width: 13px;
      }

      img {
        height: 100%;
        max-width: none;
        position: relative;
        left: -60%;

        // @media (max-width: $small) {
          // left: -1365%;
        // }
      }
    }
  }

  .back-view-image {
    display: none;
    position: absolute;
    right: 0;
    height: 100%;
    width: 70%;

    .image-view-title {
      visibility: hidden;
    }

    .back-view-container {
      height: 100%;

      .product-card {
        &:after {
          content: '';
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          z-index: 1;
        }
      }
    }
  }
