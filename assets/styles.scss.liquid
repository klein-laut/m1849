/*================ HOME BOX LAYOUT ================*/
@media screen and (min-width: 591px) {
  .box-layout.grid {
    padding-left: 25px;
    // padding-left: 30px; //layout no spacing
    padding-right: 0;
  }
  .box-layout .grid__item {
    margin-bottom: 4px;
    padding-left: 4px !important;

    // margin-bottom: 0; //layout no spacing
    // padding-left: 0 !important; //layout no spacing
  }
}
@media screen and (min-width: 769px) {
  .box-layout .grid__item:nth-of-type(3n+1) {
    clear: left;
  }
}
.box-aspect-ratio,
.box-aspect-ratio-long {
  @include aspect-ratio(4, 3);
  overflow: hidden;
}
@media screen and (min-width: 769px) {
  .box-aspect-ratio-long {
    @include aspect-ratio(4, 6);
    overflow: hidden;
  }
}
.box-layout .box__image {
  line-height: 0;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-color: transparent;
}
.box__text-wrap {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  padding: 0 30px;
  width: 100%;
}

/*--- Text Colors --*/
.box-layout .grid__item {
  &.is-light {
    color: $light-color;

    .box__content {
    	background: $dark-color;
    }
    .btn {
      color: $light-color;
      border-color: $light-color;

      &:hover {
        background-color: $light-color;
        color: $dark-color;
      }
    }
  }
  &.is-dark {
    color: $dark-color;

    .box__content {
    	background: $light-color;
    }
    .btn {
      color: $dark-color;
      border-color: $dark-color;

      &:hover {
        background-color: $dark-color;
        color: $light-color;
      }
    }
  }
}

