/*------- Mixins --------*/
@mixin aspect-ratio($width, $height) {
  position: relative;
  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: ($height / $width) * 100%;
  }
  > .box__content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

/*------ Site Styles -------*/

.site-header {
  border: none;
}
.site-header .wrapper {
  // padding: 0;
